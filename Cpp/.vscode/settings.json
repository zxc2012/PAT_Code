        "cstddef": "cpp",
        "cstring": "cpp",
        "ctime": "cpp",
        "deque": "cpp",
        "forward_list": "cpp",
        "list": "cpp",
        "unordered_map": "cpp",
        "unordered_set": "cpp",
        "vector": "cpp",
        "functional": "cpp",
        "ratio": "cpp",
        "tuple": "cpp",
        "fstream": "cpp",
        "future": "cpp",
        "iomanip": "cpp",
